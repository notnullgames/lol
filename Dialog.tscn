script/source = "extends CanvasLayer

signal dialog_actioned(id)

var dialog
var current_choice = 0

func drawText():
	$VBoxContainer/Text.bbcode_text = dialog.dialogue
	if dialog.responses.size():
		$VBoxContainer/Text.bbcode_text += \"\\n\"
		for i in range(dialog.responses.size()):
			if i == current_choice:
				$VBoxContainer/Text.bbcode_text += \"\\n > \" + dialog.responses[i].prompt
			else:
				$VBoxContainer/Text.bbcode_text += \"\\n   \" + dialog.responses[i].prompt

func handle(d):
	dialog = d
	current_choice = 0
	$VBoxContainer/Name.bbcode_text = dialog.character
	var character = dialog.character.to_lower()
	var path = 'res://people/%s/portrait.png' % character
	var file2Check = File.new()
	if file2Check.file_exists(path):
		$VBoxContainer.anchor_right = 0.8
		$Portrait.texture = load(path)
		$Portrait.visible = true
	else:
		$VBoxContainer.anchor_right = 1
		$Portrait.visible = false
	drawText()

func _input(event):
	if event.is_action_pressed('ui_cancel'):
		GameState.set_player_move(true)
		queue_free()
	if dialog.responses.size() == 0:
		if event.is_action_pressed('ui_accept'):
			emit_signal(\"dialog_actioned\", dialog.next_node_id)
			queue_free()
	else:
		if event.is_action_pressed('ui_up'):
			current_choice = (current_choice - 1) % dialog.responses.size()
			drawText()
		if event.is_action_pressed('ui_down'):
			current_choice = (current_choice + 1) % dialog.responses.size()
			drawText()
		if event.is_action_pressed('ui_accept'):
			emit_signal(\"dialog_actioned\", dialog.responses[current_choice].next_node_id)
			queue_free()
"

